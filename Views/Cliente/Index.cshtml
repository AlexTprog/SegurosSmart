
@{
    ViewBag.Title = "Index";
}

<link href="~/Content/datatables.css" rel="stylesheet" />
<link href="~/Content/cssPropio.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />

<h2>Cliente</h2>

<label>Seleccione Genero</label>
<select id="cboGenero">
</select>
<input type="button" id="btnBuscar" value="Buscar " class="btn btn-success" />
<input type="button" id="btnLimpiar" value="Limpiar " class="btn btn-primary" />

<button onclick="openModal(0)" type="button" class="btn btn-dark" data-toggle="modal" data-target="#myModal">Agregar</button>


<div id="tabla" class="mt-4">

</div>


<div id="myModal" class="modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 id="lblTitulo" class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <table style="width:80%;margin:auto">
                    <tr>
                        <td width="40%">Id Cliente</td>
                        <td width="60%"><input class="borrar form-control" type="text" id="txtIdCliente" readonly /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Nombres </td>
                        <td><input class="borrar obligatorio  form-control" type="text" id="txtnombre" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Apellido Paterno</td>
                        <td><input class="borrar obligatorio  form-control" id="txtapPaterno" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Apellido Materno</td>
                        <td><input class="borrar obligatorio  form-control" id="txtapMaterno" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Genero</td>
                        <td>
                            <label>Hombre</label>
                            <input type="radio" id="rbMasculino" name="rbSexo" checked />
                            <label>Mujer</label>
                            <input type="radio" id="rbFemenino" name="rbSexo" />
                        </td>
                    </tr>
                    <tr>
                        <td>Ingrese Fecha Nacimiento</td>
                        <td><input class="borrar obligatorio  form-control" id="dtFechaNacimiento" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Telefono</td>
                        <td><input class="borrar obligatorio  form-control" id="txttelefono" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Direccion</td>
                        <td><input class="borrar obligatorio  form-control" id="txtDireccion" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Tipo de Documento</td>
                        <td>
                            <label>DNI</label>
                            <input type="radio" id="rbDni" name="rbTDoc" checked />
                            <label>PASAPORTE</label>
                            <input type="radio" id="rbPasaporte" name="rbTDoc" />
                        </td>
                    </tr>
                    <tr>
                        <td>Documento de Identidad</td>
                        <td><input class="borrar obligatorio  form-control" id="txtDocumentoIdentidad" type="number" /></td>
                    </tr>

                </table>
            </div>
            <div class="modal-footer">
                <button onclick="Agregar()" id="btnAceptar" type="button" class="btn btn-success">Aceptar</button>

                <button id="btnCancelar" type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </div>
        </div>

    </div>
</div>


<script src="~/Scripts/fontawesome/fontawesome.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/Js/Cliente.js"></script>
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
